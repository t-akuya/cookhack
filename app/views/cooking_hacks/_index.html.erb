  <div class='cooking_hack-contents' id="cooking_hack-head">
    <ul class='cooking_hack-lists'>
      <% @cooking_hacks.each do |cooking_hack| %>
        <li class='hack-list'>
          <div class='cooking_hack-img'>
            <%#= link_to 詳細ページへのパス do %>
            <%#= 画像タグ  %>
          </div>

          <div class='cooking_hack-info'>
            <h3 class='cooking_hack-title'>
              <%= cooking_hack.title %>
            </h3>
            <div class='heart-btn'>
              <%= image_tag "heart.png", class:"heart-icon" %>
              <span class='heart-count'>0</span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>  

    <ul class='cooking_hack-lists'>  
      <% if @cooking_hack.blank? %> 
        <li class='hack-list'>
          <div class='cooking_hack-img'>
            <%= link_to '#' do %>
            <%= image_tag "sample-hotcake.png", class: "hack-img" %>
          </div>
          <div class='cooking_hack-info'>
            <h3 class='cooking_hack-title'>
              あなたのハックを投稿してね！
            </h3>
            <div class='heart-btn'>
              <%= image_tag "heart.png", class:"heart-icon" %>
              <span class='heart-count'>0</span>
            </div>
          </div>
          <% end %>
        </li>
      <% end %> 
    </ul>
  </div>